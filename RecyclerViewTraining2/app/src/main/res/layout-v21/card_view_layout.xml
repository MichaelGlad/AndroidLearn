<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/camel1"
            android:transitionName="@string/shared_element"/>

        <TextView
            android:id="@+id/txtAnimalsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image"
            android:text=" Animal Name"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="@string/shared_element_name"/>

        <TextView
            android:id="@+id/txtAnimalsMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAnimalsName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image"
            android:text=" Animal Mail"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="@string/shared_element_mail"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

